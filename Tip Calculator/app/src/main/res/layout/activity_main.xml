<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/billAmount"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipPercentage"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="520dp"
        android:gravity="center_vertical|right"
        android:text="15%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/selectTip"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/billAmount"
        app:layout_constraintTop_toBottomOf="@+id/billAmount"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/idTip"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|right"
        android:text="Tip"
        app:layout_constraintBottom_toTopOf="@+id/idTotal"
        app:layout_constraintEnd_toStartOf="@+id/tipAmount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/billAmount"
        app:layout_constraintTop_toBottomOf="@+id/tipPercentage"
        app:layout_constraintVertical_bias="0.625" />

    <TextView
        android:id="@+id/idTotal"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="372dp"
        android:gravity="center_vertical|right"
        android:text="Total"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/billAmount" />

    <TextView
        android:id="@+id/tipAmount"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginEnd="44dp"
        android:gravity="center"
        android:text="$0.00"
        app:layout_constraintBottom_toTopOf="@+id/totalAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billAmount"
        app:layout_constraintVertical_bias="0.847" />

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginBottom="372dp"
        android:gravity="center"
        android:text="$0.00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toEndOf="@+id/idTotal" />

    <SeekBar
        android:id="@+id/selectTip"
        android:layout_width="244dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tipAmount"
        app:layout_constraintEnd_toEndOf="@+id/billAmount"
        app:layout_constraintTop_toBottomOf="@+id/billAmount" />


</androidx.constraintlayout.widget.ConstraintLayout>